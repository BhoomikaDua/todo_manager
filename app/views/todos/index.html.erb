<main class="todo-app-website-wrapper">
    <div class="todo-app-wrapper">
      <h2 class="todo-app-main-heading">My To-Do List</h2>
      <div class="todo-app-add-todo-wrapper">
        <input class="todo-app-text-input" type="text" placeholder="What's next?">
        <input class="todo-app-date-input" type="date">
        <span class="todo-app-submit-new-todo-button">Add</span>
      </div>

      <%= render partial: "todo-section", locals: {
        section_title: "Overdue",
        todos: Todo.overdue,
        show_due_date: true
      } %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due Today",
        todos: Todo.due_today,
        show_due_date: false
      } %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due Later",
        todos: Todo.due_later,
        show_due_date: true
      } %>

    </div>
  </main>
