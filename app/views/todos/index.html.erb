<main class="todo-app-website-wrapper">
    <div class="todo-app-wrapper">
      <h2 class="todo-app-main-heading">My To-Do List</h2>
      <form class="todo-app-add-todo-wrapper" action="/todos" method="POST">
        <input class="todo-app-text-input" type="text" placeholder="What's next?" name="todo_text">
        <input class="todo-app-date-input" type="date" name="due_date">
        <input class="todo-app-submit-new-todo-button" type="submit" value="Add">
      </form>

      <%= render partial: "todo-section", locals: {
        section_title: "Overdue",
        todos: Todo.overdue.incomplete,
        show_due_date: true
      } %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due Today",
        todos: Todo.due_today,
        show_due_date: false
      } %>

      <%= render partial: "todo-section", locals: {
        section_title: "Due Later",
        todos: Todo.due_later,
        show_due_date: true
      } %>

    </div>
  </main>
