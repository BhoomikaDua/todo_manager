<!DOCTYPE html>
<html>
  <head>
    <title>TodoManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if(@current_user) %>
      <nav class="todo-app-top-navigation">
        <p class="todo-app-top-navigation-content">
          <span>Welcome, <%= @current_user.first_name %>!</span>
          <%= link_to "Sign Out", destroy_session_path, method: "delete", class: "todo-app-sign-out"%>
        </p>
      </nav>
    <% end %>


    <% if(flash[:error]) %>
        <div class="todo-app-flash-meassage-conatiner">
          <%= flash[:error] %>
        </div>
    <% end %>

    <%= yield %>
  </body>
</html>
